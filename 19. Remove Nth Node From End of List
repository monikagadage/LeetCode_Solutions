class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        
        if(head->next == NULL){
            return NULL;
        }
        
        ListNode* slow = head;
        ListNode* fast = head;
        
        while(n!=0){
        fast = fast->next;
        n--;
        }
        if (fast == NULL) {
            return head->next;
        }
        while(fast!= NULL && fast->next!=NULL){
            slow = slow->next;
            fast = fast->next;
        }
        
        ListNode* temp = slow->next->next;
        slow->next = temp;
       
        
        return head; 
        
    }
};
